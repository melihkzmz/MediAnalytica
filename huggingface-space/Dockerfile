FROM python:3.10-slim

WORKDIR /app

# Install system dependencies
# Note: libgl1-mesa-glx is deprecated in Debian 12+, use libgl1 instead
# opencv-python-headless doesn't require these, but keeping for compatibility
RUN apt-get update && apt-get install -y \
    libgl1 \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Expose port 7860 (Hugging Face default)
EXPOSE 7860

# Run with gunicorn for production
CMD ["gunicorn", "--bind", "0.0.0.0:7860", "--timeout", "300", "--workers", "1", "app:app"]

